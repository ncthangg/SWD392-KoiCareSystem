            </div>
                <div class="form-group">
                    <label asp-for="RegisterAdminDto.ConfirmPassword"></label>
                    <input asp-for="RegisterAdminDto.ConfirmPassword" class="form-control" type="password" />
                    <span asp-validation-for="RegisterAdminDto.ConfirmPassword" class="text-danger"></span>
                </div>
            <div class="form-group">
                <label asp-for="RegisterAdminDto.RoleId" class="control-label"></label>
                <select asp-for="RegisterAdminDto.RoleId" class ="form-control" asp-items="ViewBag.RoleId"></select>
