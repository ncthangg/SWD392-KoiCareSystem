@page
@model KoiCareSystem.RazorWebApp.Pages.Member.WaterParameters.DetailModel

@{
    ViewData["Title"] = "Detail";
}

<h1>@Model.PondName</h1>



<div>
    <h4>WaterParameter</h4>
    <a asp-page="./Create" asp-route-id="@Model.PondId"> Load</a> |||
    <a asp-page="/Member/WaterParameters/History" asp-route-id="@Model.PondId">History</a>
    <hr />
    
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WaterParameter.MeasurementDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WaterParameter.MeasurementDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WaterParameter.Temperature)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WaterParameter.Temperature)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WaterParameter.Salinity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WaterParameter.Salinity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WaterParameter.Ph)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WaterParameter.Ph)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WaterParameter.O2)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WaterParameter.O2)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WaterParameter.No2)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WaterParameter.No2)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WaterParameter.No3)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WaterParameter.No3)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WaterParameter.Po4)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WaterParameter.Po4)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WaterParameter.WaterVolume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WaterParameter.WaterVolume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WaterParameter.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WaterParameter.Status.StatusName)
        </dd>
    </dl>
    
</div>

<h3>Parameter Evaluations</h3>
<dl class="row">
    @if (Model.Evaluations != null)
    {
        @foreach (var evaluation in Model.Evaluations)
        {
                    <dt class="col-sm-2">
                @evaluation.Key
                    </dt>
                    <dd class="col-sm-10">
                @evaluation.Value
                    </dd>
        }
    }
</dl>


