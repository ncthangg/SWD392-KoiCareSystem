@model IEnumerable<KoiCareSystem.Data.Models.Product>


<div class="row row-cols-1 row-cols-md-4 g-4">
    @foreach (var product in Model)
    {
        <div class="col">
            <div class="card h-100">
                <div class="image-container">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.ProductName">
                </div>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.ProductName</h5>
                    <p class="card-text">@product.ProductType</p>
                    <p class="card-text">Giá: @product.Price</p>
                    <div class="mt-auto text-center">
                        <form method="post" asp-page-handler="AddToCart">
                            <input type="hidden" name="ProductId" value="@product.ProductId" />
                            <input type="hidden" name="OrderId" value="@ViewData["OrderId"]" />
                            <input type="hidden" name="Quantity" value="1" />
                            <button type="submit" class="btn btn-primary">Thêm vào giỏ</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .image-container {
        position: relative; /* Ensures the container is block-level */
        width: 100%; /* Make sure the container takes up the full width of its parent */
        height: 300px; /* Increased height for the image container */
    }

        .image-container img {
            width: 100%; /* Make the image take the full width of the container */
            height: 100%; /* Make the image take the full height of the container */
            object-fit: cover; /* Ensures the image covers the container without distortion */
            object-position: center; /* Centers the image in the container */
        }

    .card-body {
        flex-grow: 1; /* Ensures the card-body adjusts and takes remaining space */
        padding-top: 10px; /* Optional: Adds space between image and text */
    }
</style>
