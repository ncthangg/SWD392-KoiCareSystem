@page
@model KoiCareSystem.RazorWebApp.Pages.Shop.Orders.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "_ShopLayout";
}

<h1>Orders Management</h1>

<form method="get">
    <div class="row mb-3 justify-content-around">
        <div class="col-md-3">
            <label for="SearchId">Order ID:</label>
            <input type="text" id="SearchOrderId" name="SearchOrderId" value="@Model.SearchOrderId" class="form-control" />
        </div>
        <div class="col-md-3">
            <label for="SearchName">User Name:</label>
            <input type="text" id="SearchUserName" name="SearchUserName" value="@Model.SearchUserName" class="form-control" />
        </div>
        <div class="col-md-3">
            <label for="SearchOrderStatus">Order Status:</label>
            <select asp-for="SearchOrderStatus" class="form-control" asp-items="ViewBag.OrderStatus"></select>
        </div>
        <div class="col-md-auto align-self-end">
            <button type="submit" class="btn btn-primary mt-2">Search</button>
            <button type="reset" class="btn btn-secondary mt-2">Reset</button>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Order) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.StatusName)
            </td>

            <td>
                <a asp-page="/AdminShop/OrderItems/Index" asp-route-orderId="@item.OrderId">Manager</a> |
                <a asp-page="./Edit" asp-route-id="@item.OrderId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.OrderId">Details</a> | 
                <a asp-page="./Delete" asp-route-id="@item.OrderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
