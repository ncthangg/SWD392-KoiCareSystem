@page
@model KoiCareSystem.RazorWebApp.Pages.Admin.Users.EditModel

@{
    ViewData["Title"] = "Edit ";
    Layout = "_AdminLayout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>User</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RequestRegisterAdminDto.Email" class="control-label"></label>
                    <input asp-for="RequestRegisterAdminDto.Email" class="form-control" readonly/>
                    <span asp-validation-for="RequestRegisterAdminDto.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RequestRegisterAdminDto.Password" class="control-label"></label>
                    <input asp-for="RequestRegisterAdminDto.Password" class="form-control" type="password" />
                    <span asp-validation-for="RequestRegisterAdminDto.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RequestRegisterAdminDto.ConfirmPassword"></label>
                    <input asp-for="RequestRegisterAdminDto.ConfirmPassword" class="form-control" type="password" />
                    <span asp-validation-for="RequestRegisterAdminDto.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RequestRegisterAdminDto.RoleId" class="control-label"></label>
                    <select asp-for="RequestRegisterAdminDto.RoleId" class="form-control" asp-items="ViewBag.RoleId" disabled></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
