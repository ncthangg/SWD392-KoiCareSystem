@model KoiCareSystem.RazorWebApp.Pages.Guest.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="row g-0">

                    <!-- Left column with icon -->
                    <div class="col-md-6 d-flex align-items-center justify-content-center" style="background-color: #99FFFF;">
                        <div class="text-center">
                            <img src="~/images/icons/icon.png" alt="Website Icon" class="img-fluid mb-3" style="width: 300px; height: 300px;">
                            <h3 class="fw-bold" style="color: black;">Koi Care System</h3>
                        </div>
                    </div>

                    <!-- Right column with login form -->
                    <div class="col-md-6 p-4">
                        <h3 class="text-center mb-4">Đăng nhập</h3>
                        <form method="post">
                            <div class="form-group mb-3">
                                <label asp-for="RequestLoginDto.Email" class="form-label">Email</label>
                                <input asp-for="RequestLoginDto.Email" class="form-control" />
                                <span asp-validation-for="RequestLoginDto.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-4">
                                <label asp-for="RequestLoginDto.Password" class="form-label">Password</label>
                                <input asp-for="RequestLoginDto.Password" class="form-control" type="password" />
                                <span asp-validation-for="RequestLoginDto.Password" class="text-danger"></span>
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })
                            <button type="submit" class="btn btn-primary w-100" style="background-color:#99FFFF; color:black;">Login</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


